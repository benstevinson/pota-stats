{
  "name": "@pota-stats/shared",
  "version": "0.1.0",
  "description": "Shared types, queries, and data utilities for POTA stats",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts",
    "./queries": "./src/queries.ts",
    "./data": "./src/data.ts",
    "./constants": "./src/constants.ts"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "build": "tsc --noEmit",
    "test": "node --import tsx node_modules/ava/entrypoints/cli.mjs",
    "lint": "eslint src/"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "ava": "^6.2.0",
    "eslint": "^9.17.0",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.19.1"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--import=tsx"
    ],
    "files": [
      "test/**/*.test.ts"
    ]
  },
  "keywords": [
    "pota",
    "amateur-radio",
    "ham-radio",
    "parks-on-the-air",
    "duckdb"
  ],
  "license": "MIT"
}
